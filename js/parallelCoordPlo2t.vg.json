{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/xavierandueza/FIT3179_Data_Vis/main/data/wide_LiteracyData.csv"
  },
  "width": 600,
  "height": 300,
  "transform": [
    {"filter": "datum['Adult_Literacy_Female_15']"},
    {"window": [{"op": "count", "as": "index"}]},
    {"fold": ["Adult_Literacy_Female_15", "Adult_Literacy_Male_65", "Elderly_Literacy_Female_65", "Elderly_Literacy_Male_65", "Adult_Literacy_Female_25to64", "Adult_Literacy_Male_25to65", "Youth_Literacy_Female15to24", "Youth_Literacy_Male15to24"]},
    {
      "joinaggregate": [
        {"op": "min", "field": "value", "as": "min"},
        {"op": "max", "field": "value", "as": "max"}
      ],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.value - datum.min) / (datum.max-datum.min)",
      "as": "norm_val"
    },
    {
      "calculate": "(datum.min + datum.max) / 2",
      "as": "mid"
    }
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {
        "detail": {"aggregate": "count"},
        "x": {"field": "key"}
      }
    },
    {
      "mark": "line",
      "encoding": {
        "color": {"type": "nominal", "field": "Region"},
        "detail": {"type": "nominal", "field": "index"},
        "opacity": {"value": 0.3},
        "x": {"type": "nominal", "field": "key"},
        "y": {"type": "quantitative", "field": "norm_val", "axis": null},
        "tooltip": [
          {"type": "quantitative", "field": "Adult_Literacy_Female_15"},
          {"type": "quantitative", "field": "Adult_Literacy_Male_65"},
          {"type": "quantitative", "field": "Elderly_Literacy_Female_65"},
          {"type": "quantitative", "field": "Elderly_Literacy_Male_65"},
          {"type": "quantitative", "field": "Adult_Literacy_Female_25to64"},
          {"type": "quantitative", "field": "Adult_Literacy_Male_25to65"},
          {"type": "quantitative", "field": "Youth_Literacy_Female15to24"},
          {"type": "quantitative", "field": "Youth_Literacy_Male15to24"}
        ]
      }
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 0}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "max", "field": "max"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 150}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "min", "field": "mid"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 300}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "min", "field": "min"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    }
  ],
  "config": {
    "axisX": {"domain": false, "labelAngle": 0, "tickColor": "#ccc", "title": null},
    "view": {"stroke": null},
    "style": {
      "label": {"baseline": "middle", "align": "right", "dx": -5},
      "tick": {"orient": "horizontal"}
    }
  }
}