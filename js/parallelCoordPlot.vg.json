{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Parallel coordinates plot showing 8 dimensions of literacy statistics.",
  "width": 700,
  "height": 400,
  "padding": 5,

  "config": {
    "axisY": {
      "titleX": -2,
      "titleY": 410,
      "titleAngle": 0,
      "titleAlign": "right",
      "titleBaseline": "top"
    }
  },

  "data": [
    {
      "name": "literacy",
      "url": "https://raw.githubusercontent.com/xavierandueza/FIT3179_Data_Vis/main/data/wide_LiteracyData.csv",
      "format": {
        "type": "csv",
        "parse": {"Year": "date:%Y-%m-%d"}
      },
      "transform": [
        { "type": "filter", "expr": "datum.Adult_Literacy_Female_15 && datum.Adult_Literacy_Male_65 && datum.Elderly_Literacy_Female_65 && datum.Elderly_Literacy_Male_65 && datum.Adult_Literacy_Female_25to64 && datum.Adult_Literacy_Male_25to65 && datum.Youth_Literacy_Female15to24 && datum.Youth_Literacy_Male15to24" },
        { "type": "formula", "as": "Year",
          "expr": "isNumber(datum.year) ? datum.year : year(datum.Year)" }
      ]
    },
    {
      "name": "fields",
      "values": [
        "Adult_Literacy_Female_15", "Adult_Literacy_Male_65", "Elderly_Literacy_Female_65", 
        "Elderly_Literacy_Male_65", "Adult_Literacy_Female_25to64", "Adult_Literacy_Male_25to65", 
        "Youth_Literacy_Female15to24", "Youth_Literacy_Male15to24"
      ]
    },
    {
      "name": "lines",
      "source": "literacy",
      "transform": [
        {
          "type": "project",
          "fields": ["Region", "Adult_Literacy_Female_15", "Adult_Literacy_Male_65", "Elderly_Literacy_Female_65", 
                    "Elderly_Literacy_Male_65", "Adult_Literacy_Female_25to64", "Adult_Literacy_Male_25to65", 
                    "Youth_Literacy_Female15to24", "Youth_Literacy_Male15to24"]
        },
        {
          "type": "fold",
          "fields": ["Adult_Literacy_Female_15", "Adult_Literacy_Male_65", "Elderly_Literacy_Female_65", 
                    "Elderly_Literacy_Male_65", "Adult_Literacy_Female_25to64", "Adult_Literacy_Male_25to65", 
                    "Youth_Literacy_Female15to24", "Youth_Literacy_Male15to24"],
          "as": ["key", "value"]
        }
      ]
    }
    
  ],

  "scales": [
    {
      "name": "ord", "type": "point",
      "range": "width", "round": true,
      "domain": [
        "Adult_Literacy_Female_15", "Adult_Literacy_Male_65", "Elderly_Literacy_Female_65", 
        "Elderly_Literacy_Male_65", "Adult_Literacy_Female_25to64", "Adult_Literacy_Male_25to65", 
        "Youth_Literacy_Female15to24", "Youth_Literacy_Male15to24"
      ]
      
    },
    {
      "name": "Adult_Literacy_Female_15", "type": "linear",
      "range": "height", "zero": false, "nice": true,
      "domain": {"data": "literacy", "field": "Adult_Literacy_Female_15"}
    },
    {
      "name": "Adult_Literacy_Male_65", "type": "linear",
      "range": "height", "zero": false, "nice": true,
      "domain": {"data": "literacy", "field": "Adult_Literacy_Male_65"}
    },
    {
      "name": "Elderly_Literacy_Female_65", "type": "linear",
      "range": "height", "zero": false, "nice": true,
      "domain": {"data": "literacy", "field": "Elderly_Literacy_Female_65"}
    },
    {
      "name": "Elderly_Literacy_Male_65", "type": "linear",
      "range": "height", "zero": false, "nice": true,
      "domain": {"data": "literacy", "field": "Elderly_Literacy_Male_65"}
    },
    {
      "name": "Adult_Literacy_Female_25to64", "type": "linear",
      "range": "height", "zero": false, "nice": true,
      "domain": {"data": "literacy", "field": "Adult_Literacy_Female_25to64"}
    },
    {
      "name": "Adult_Literacy_Male_25to65", "type": "linear",
      "range": "height", "zero": false, "nice": true,
      "domain": {"data": "literacy", "field": "Adult_Literacy_Male_25to65"}
    },
    {
      "name": "Youth_Literacy_Female15to24", "type": "linear",
      "range": "height", "zero": false, "nice": true,
      "domain": {"data": "literacy", "field": "Youth_Literacy_Female15to24"}
    },
    {
      "name": "Youth_Literacy_Male15to24", "type": "linear",
      "range": "height", "zero": false, "nice": true,
      "domain": {"data": "literacy", "field": "Youth_Literacy_Male15to24"}
    },
    {
      "name": "colorScale",
      "type": "ordinal",
      "domain": ["South Asia", "Europe & Central Asia", "Middle East & North Africa", "Sub-Saharan Africa", "Latin America & Caribbean", "East Asia & Pacific"],
      "range": {"scheme": "viridis"}
    }
  ],

  "axes": [
    {
      "orient": "left", "zindex": 1,
      "scale": "Adult_Literacy_Female_15", "title": "Adult_Literacy_Female_15",
      "offset": {"scale": "ord", "value": "Adult_Literacy_Female_15", "mult": -1}
    },
    {
      "orient": "left", "zindex": 1,
      "scale": "Adult_Literacy_Male_65", "title": "Adult_Literacy_Male_65",
      "offset": {"scale": "ord", "value": "Adult_Literacy_Male_65", "mult": -1}
    },
    {
      "orient": "left", "zindex": 1,
      "scale": "Elderly_Literacy_Female_65", "title": "Elderly_Literacy_Female_65",
      "offset": {"scale": "ord", "value": "Elderly_Literacy_Female_65", "mult": -1}
    },
    {
      "orient": "left", "zindex": 1,
      "scale": "Elderly_Literacy_Male_65", "title": "Elderly_Literacy_Male_65",
      "offset": {"scale": "ord", "value": "Elderly_Literacy_Male_65", "mult": -1}
    },
    {
      "orient": "left", "zindex": 1,
      "scale": "Adult_Literacy_Female_25to64", "title": "Adult_Literacy_Female_25to64",
      "offset": {"scale": "ord", "value": "Adult_Literacy_Female_25to64", "mult": -1}
    },
    {
      "orient": "left", "zindex": 1,
      "scale": "Adult_Literacy_Male_25to65", "title": "Adult_Literacy_Male_25to65",
      "offset": {"scale": "ord", "value": "Adult_Literacy_Male_25to65", "mult": -1}
    },
    {
      "orient": "left", "zindex": 1,
      "scale": "Youth_Literacy_Female15to24", "title": "Youth_Literacy_Female15to24",
      "offset": {"scale": "ord", "value": "Youth_Literacy_Female15to24", "mult": -1}
    },
    {
      "orient": "left", "zindex": 1,
      "scale": "Youth_Literacy_Male15to24", "title": "Youth_Literacy_Male15to24",
      "offset": {"scale": "ord", "value": "Youth_Literacy_Male15to24", "mult": -1}
    }
  ],

  "marks": [
    {
      "type": "line",
      "from": {"data": "lines"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear"},
          "strokeWidth": {"value": 1.01},
          "strokeOpacity": {"value": 0.3},
          "stroke": { 
            "field": "Region",
            "scale": "colorScale"
          }
        },
        "update": {
          "x": {
            "scale": "ord", 
            "field": "key"
          },
          "y": {
            "scale": {
              "signal": "datum.key"
            }, 
            "field": "value"
          }
        }
      }
    }
  ]

}