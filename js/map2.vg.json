{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Primary School-Life Expectancy by Continent",
    "width": 400,
    "height": 400,
    "params": [
      {
        "name": "zoom_level",
        "value": 300,
        "bind": {
          "input": "range",
          "min": 200,
          "max": 1000,
          "step": 10,
          "name": "Zoom: "
        }
      },
      {
        "name": "center_to",
        "value": [12, 48],
        "bind": {
          "input": "select",
          "options": [
            [20, 0],
            [115, 25],
            [55, 38],
            [12, 48],
            [-106, 44],
            [-61, -23],
            [145, -24]
          ],
          "labels": ["Africa", 
                    "East Asia", 
                    "Central Asia & Middle East", 
                    "Europe",
                    "North & Central America",
                    "South America",
                    "Oceania"],
          "name": "Focus Area: "
        }
      },
      {
        "name": "student_gender",
        "value": "female",
        "bind": {
          "input": "select",
          "options": [
            "Female",
            "Male"
          ],
          "labels": ["Female",
                    "Male"],
          "name": "Student Gender: "
        }
      }
    ],

    "data": {
        "url": "https://raw.githubusercontent.com/xavierandueza/FIT3179_Data_Vis/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },

    "projection": {
      "type": "equirectangular",
      "center": {"expr": "center_to"},
      "scale": {"expr": "zoom_level"}
    },
    "layer":[
        {
          "transform": [
            {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {
            "tooltip": {
              "field": "note"
            }
          }
        },
    
        {
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/xavierandueza/FIT3179_Data_Vis/main/data/SchoolLifeExpectancy.csv"
                },
                "key": "Country Name",
                "fields": ["2009"]
              }
            },
            {
                "filter": {
                    "field": "Indicator Name",
                    "oneOf": [
                        "School life expectancy, primary, female (years)",
                        "School life expectancy, primary, male (years)"
                    ]
                }
            }
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "color": {
              "condition": {
                "test": "datum['2009'] === null || datum['2009'] <= 0",
                "value": "lightgray"
              },
              "field": "2009",
              "type": "quantitative",
              "title": "ANER"
            },
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"},
              {"field": "2009", "type": "quantitative", "title": "Adjusted Net Enrolment Rate"}
            ]
          }
        },
    
        {
          "data": { 
            "url": "https://raw.githubusercontent.com/xavierandueza/FIT3179_Data_Vis/main/js/ne_50m_ocean.json",
            "format": {"type": "topojson", "feature": "ne_50m_ocean"}
          },
          "mark": {"type": "geoshape", "fill": "#ADD8E6"}
        },
    
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        }
    
      ],
    "config": {}
  }