{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Worldwide 2012 Adjusted net enrolment rate (ANER) Gender Parity Index (GPI), Primary School Level",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/xavierandueza/FIT3179_Data_Vis/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },

  "projection": {"type": "equalEarth"}, 

  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },

    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/xavierandueza/FIT3179_Data_Vis/main/data/AdjustedNetEnrolmentGenderParity.csv"
            },
            "key": "Country Name",
            "fields": ["2012"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "condition": {
            "test": "datum['2012'] === null || datum['2012'] <= 0",
            "value": "lightgray"
          },
          "field": "2012",
          "type": "quantitative",
          "title": ["ANER","GPI"],
          "scale": {
            "type": "threshold",
            "domain": [0.8, 0.85, 0.90, 0.95, 1.0],
            "scheme" : "viridis"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "2012", "type": "quantitative", "format": ".2f", "title": "Adjusted Net Enrolment Rate"}
        ]
      }
    },

    {
      "data": { 
        "url": "https://raw.githubusercontent.com/xavierandueza/FIT3179_Data_Vis/main/js/ne_50m_ocean.json",
        "format": {"type": "topojson", "feature": "ne_50m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "#ADD8E6"}
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }

  ],
  "config": {
    "axisX": {"domain": false, 
                "labelAngle": -45, 
                "tickColor": "#ccc", 
                "title": null,
                "labelFontSize": 12,
                "labelFontWeight": "normal",
                "titleFontSize": 12
              },
    "axisY": {
      "labelFontSize": 12,
      "labelFontWeight": "normal",
      "titleFontSize": 12
    },
    "view": {"stroke": null},
    "style": {
      "label": {"baseline": "middle", 
                "align": "right", 
                "dx": -5},
      "tick": {"orient": "horizontal"}
    },
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 12
    }
  }
}